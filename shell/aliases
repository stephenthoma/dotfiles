function gda() {
    if [ -n "$1" ]
    then
        git diff "$1"
        read "response?git add $1? (y/N) "
        if [[ $response =~ [yY](es)* ]]
        then
            git add "$1"
        fi
    else
        echo "Must pass a file path"
    fi
}

alias beep="printf '\a'"

alias vim="nvim"

alias python="python3"
alias pip="pip3"

function workon() {
    source ~/.virtualenvs/"$1"/bin/activate
}


# Tab complete c against code
c() { cd $HOME/code/$1; }
_c() { _files -W $HOME/code -/; }
compdef _c c

function rfr() { # Recursive find and replace using the-silver-searcher
    if [ $# -ne 2 ]
    then
        echo "Usage: rfr <find_str> <repl_str>"
    else
        ag "$1" -l0 | xargs -0 sed -i "" "s/$1/$2/g"
    fi
}
