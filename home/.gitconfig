[user]
	name = Stephen Thoma
	email = sthoma4@gmail.com
[alias]
	co = checkout
	rb = rebase
	st = status
	br = branch
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	excludesfile = ~/.global_gitignore
	editor = vim 
	autocrlf = input
[apply]
	whitespace = nowarn
[format]
	pretty = %C(yellow)%h%Creset %s %C(red)(%an, %cr)%Creset
